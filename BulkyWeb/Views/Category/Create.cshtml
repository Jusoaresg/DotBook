@model Category

<form method="post">
    <div class="border p-3 mt-4 rounded-4">
        <h2 class="text-primary">Create Category</h2>
        <hr />
    
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-1"></label>
            <input asp-for="Name" class="form-control rounded-4"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-1"></label>
            <input asp-for="DisplayOrder" class="form-control rounded-4" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary rounded-4 form-control" >Create</button>
            </div>

            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border rounded-4 form-control">
                    Back to List
                </a>
            </div>

        </div>

    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}